    initialize();

    // Cleanup function
    return () => {
      isMounted = false;
      if (tabsUnsub) tabsUnsub();
      if (menuUnsub) menuUnsub();
      ordersUnsubsRef.current.forEach(unsub => {
        if (typeof unsub === 'function') unsub();
      });
