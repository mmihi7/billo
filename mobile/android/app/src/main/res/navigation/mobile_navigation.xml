<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.billo.app.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <!-- Saved Restaurants Fragment -->
    <fragment
        android:id="@+id/navigation_saved_restaurants"
        android:name="com.billo.app.ui.saved.SavedRestaurantsFragment"
        android:label="@string/title_saved_restaurants"
        tools:layout="@layout/fragment_saved_restaurants" />

    <!-- Easy Billing Fragment -->
    <fragment
        android:id="@+id/navigation_easy_billing"
        android:name="com.billo.app.ui.billing.EasyBillingFragment"
        android:label="@string/title_easy_billing"
        tools:layout="@layout/fragment_easy_billing" />
        
    <!-- QR Code Scanner Fragment -->
    <fragment
        android:id="@+id/navigation_qr_scanner"
        android:name="com.billo.app.ui.qr.QrScannerFragment"
        android:label="@string/title_qr_scanner"
        tools:layout="@layout/fragment_qr_scanner" />

</navigation>
